<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="ToggleButton">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="titleStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="TextBox" x:Key="tBtitleStyle" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="timeStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectTitleStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectCategoryStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="addSubjectStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="Label" x:Key="weekStyle" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10, 6, 0, 0"/>

    </Style>

    <Style TargetType="TextBlock" x:Key="day" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="dayEvent" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#ffffff"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="eventInfoTitle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="memo" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="CalendarDayComment" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style TargetType="TextBox" x:Key="Note" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style TargetType="TextBox" x:Key="tboxTitleStyle" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="TextBox" x:Key="eventDetailInfo" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="gray"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>


    <Style TargetType="TextBox" x:Key="comment" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="monthComment" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Text" Value="{Binding Comment}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Comment}" Value="">

                <Setter Property="Text" Value="comment" />
                <Setter Property="Foreground" Value="Black" />

            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>