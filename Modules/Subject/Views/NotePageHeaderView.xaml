<UserControl x:Class="Notea.Modules.Subject.Views.NotePageHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- 과목 제목과 뒤로가기 버튼 -->
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- 과목 제목 -->
            <TextBox Grid.Column="0"
                     Style="{StaticResource tboxTitleStyle}"
                     Text="{Binding SubjectTitle}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="20, 0"
                     Background="Transparent" />

            <!-- 뒤로가기 버튼 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Background="Transparent">
                <Button Style="{StaticResource backButtonStyle}"
                        Command="{Binding NavigateBackCommand}"
                        FontSize="14" />
            </StackPanel>
        </Grid>

        <!-- 상단 선 -->
        <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource black}" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>