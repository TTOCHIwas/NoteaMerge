<!-- YearMonthListView.xaml -->
<UserControl x:Class="Notea.Modules.Monthly.Views.YearMonthListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notea.Modules.Monthly.Views" xmlns:vm="clr-namespace:Notea.Modules.Monthly.ViewModels"
             mc:Ignorable="d" >
    
    <UserControl.Resources>
        <vm:YearMonthListViewModel x:Key="yearMonthListVm" />
    </UserControl.Resources>

    <Grid Margin="20" DataContext="{StaticResource yearMonthListVm}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 년도 헤더 -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Year}" 
                   Style="{StaticResource titleStyle}"
                   FontSize="24"
                   Margin="20,0,0,20"/>
        
        <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource black}" HorizontalAlignment="Stretch"/>

        <!-- 월별 리스트 -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding Months}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="6"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:YearMonthView Margin="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>