<UserControl x:Class="Notea.Modules.Daily.Views.DailyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Notea.Modules.Common.Views"
             xmlns:daily="clr-namespace:Notea.Modules.Daily.Views"
             xmlns:vm="clr-namespace:Notea.Modules.Daily.ViewModels">

    <common:CenterPanelShell>
        <common:CenterPanelShell.HeaderContent>
            <daily:DailyHeaderView DataContext="{Binding HeaderViewModel}" />
        </common:CenterPanelShell.HeaderContent>

        <common:CenterPanelShell.BodyContent>
            <daily:DailyBodyView DataContext="{Binding BodyViewModel}" />
        </common:CenterPanelShell.BodyContent>
    </common:CenterPanelShell>


</UserControl>
